<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.materi.MediaAudio.AudioPlay">

    <TextView
        android:id="@+id/tv_audio_judul"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:text="Judul Audio"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/ib_audio"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/ic_audio_play"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_audio_judul"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/ib_audio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_audio_curent"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="00:00"
            android:gravity="center"
            android:layout_marginStart="60dp"/>

        <SeekBar
            android:id="@+id/sb_audio"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_audio_duration"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="00:00"
            android:gravity="center"
            android:layout_marginEnd="60dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>